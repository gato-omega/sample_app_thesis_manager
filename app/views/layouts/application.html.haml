!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Thesis Manager Sample App'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Thesis Manager Sample App'}"}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    -# Modernizr is required for Zurb Foundation
    = javascript_include_tag 'vendor/modernizr'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body{id: controller.class.name.underscore.gsub('_controller', '')}
    %header
      = render 'layouts/navigation'
    %main{:role => "main"}
      .row
        .large-12.columns{role: 'content'}
          = render 'layouts/messages'
          = yield
