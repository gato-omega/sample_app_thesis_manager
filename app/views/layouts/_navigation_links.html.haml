%li.has-form
  .row.collapse
    .large-9.small-9.columns
      %input{:placeholder => "Find Stuff", :type => "text", size: 30}/
    .large-3.small-3.columns
      %a.alert.button.expand{:href => "#"} Search
- if signed_in?
  %li= link_to current_user.try(:email), edit_user_registration_path
  %li= link_to 'Logout', destroy_user_session_path, method: :delete
- else
  %li= link_to 'Sign in', new_user_session_path
